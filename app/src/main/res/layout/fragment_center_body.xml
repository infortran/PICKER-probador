<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cl.picker.www.PickerProbador.CenterBodyFragment">
    <!--ImageView
        android:id="@+id/img_producto_seleccionado"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/vestido"/-->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <!--com.android.volley.toolbox.NetworkImageView
            android:id="@+id/img_producto_centro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            /-->
        <ImageView
            android:id="@+id/img_producto_centro"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:padding="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            />
        <ImageView
            android:id="@+id/icon_pause"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/icon_pause"
            android:layout_centerInParent="true"
            />
        <ProgressBar
            android:id="@+id/barra_progreso_relacionados"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>


    </RelativeLayout>

</FrameLayout>
