<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cl.picker.www.PickerProbador.DescripcionFragment">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/cabecera_descripcion"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/descripcion"
            android:textSize="19sp"/>

        <TextView
            android:id="@+id/descripcion_dinamica"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Descripcion hardcodeada y agregada por programacion"
            android:layout_below="@+id/cabecera_descripcion"/>
    </RelativeLayout>

</FrameLayout>
