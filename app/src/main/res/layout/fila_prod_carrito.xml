<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_fila_prod_carrito"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/logo"/>
    <TextView
        android:id="@+id/nombre_fila_prod_carrito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:layout_toRightOf="@+id/img_fila_prod_carrito"
        android:layout_centerVertical="true"
        android:textSize="25dp"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:id="@+id/descripcion_breve_fila_prod_carrito"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="descripcion breve del producto"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_toRightOf="@+id/nombre_fila_prod_carrito"/>
    <TextView
        android:id="@+id/precio_fila_prod_carrito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$100.000"
        android:textSize="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/descripcion_breve_fila_prod_carrito"/>

    <TextView
        android:id="@+id/cantidad_fila_prod_carrito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="30sp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/precio_fila_prod_carrito"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/logo"
        android:layout_toRightOf="@+id/cantidad_fila_prod_carrito"
        android:layout_marginLeft="70dp"
        android:layout_centerVertical="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"/>
</RelativeLayout>